<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen
        android:key="pref_puzzletypes"
        android:persistent="false"
        android:title="@string/puzzle_types_setup" />
    <EditTextPreference
        android:defaultValue="100"
        android:dialogTitle="@string/time_text_edittext_dialog_title"
        android:inputType="number"
        android:key="pref_time_display_size_edittext"
        android:title="@string/pref_time_text_size_title" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_two_row_time_checkbox"
        android:summary="@string/pref_two_row_time_summary"
        android:title="@string/pref_two_row_time_title" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_milliseconds_checkbox"
        android:title="@string/pref_milliseconds_title" />
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_update_time_list_entries"
        android:key="pref_update_time_list"
        android:title="@string/pref_update_time_title" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:disableDependentsState="true"
        android:key="pref_inspection_checkbox"
        android:summary="@string/pref_inspection_summary"
        android:title="@string/pref_inspection_title" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:dependency="pref_inspection_checkbox"
        android:key="pref_holdtostart_checkbox"
        android:summary="@string/pref_holdtostart_summary"
        android:title="@string/pref_holdtostart_title" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_keepscreenon_checkbox"
        android:summary="@string/pref_keepscreenon_summary"
        android:title="@string/pref_keepscreenon_title" />
</PreferenceScreen>