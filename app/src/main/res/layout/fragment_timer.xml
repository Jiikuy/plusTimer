<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity">


    <TextView
        android:id="@id/scramble_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/fragment_timer_text"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/scrambling"
        android:textSize="18sp" />


    <TextView
        android:id="@id/fragment_timer_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/ready"
        android:textSize="50sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_bottom_linear"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="7dp">


        <TextView
            android:id="@id/fragment_quickstats_ao12_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/ao12"
            android:textSize="15sp" />

        <TextView
            android:id="@id/fragment_quickstats_ao5_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/ao5"
            android:textSize="15sp" />


    </LinearLayout>

    <TextView
        android:id="@id/fragment_quickstats_solves_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_bottom_linear"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp"
        android:text="@string/solves"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@id/fragment_bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <it.sephiroth.android.library.widget.HListView
            android:id="@id/fragment_hlistview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffe0e0e0"
            android:overScrollMode="always" />
        <!--
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#ffc9c9c9"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="@string/submit"
                    android:textSize="17sp" />
        -->

    </LinearLayout>


</RelativeLayout>