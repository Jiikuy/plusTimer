<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/fragment_timer_relative"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@id/scramble_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff70dd75"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/scrambling"
            android:textSize="18sp" />

        <TextView
            android:id="@id/fragment_timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ready"
            android:textSize="50sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ff005bdd"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/details"
            android:textColor="#ffffffff"
            android:textSize="15sp" />

        <it.sephiroth.android.library.widget.HListView
            android:id="@id/fragment_hlistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff70dd75"
            android:cacheColorHint="#0000"
            android:divider="@null"
            android:overScrollMode="always"
            android:scrollbars="none" />


    </LinearLayout>


</LinearLayout>