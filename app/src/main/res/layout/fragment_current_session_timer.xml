<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".TimerActivity">

    <com.pluscubed.plustimer.ui.widget.AutoResizeTextView
        android:id="@id/fragment_current_session_timer_time_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="none"
        android:gravity="center"
        android:maxLines="1"
        android:padding="45dp"
        android:text="@string/ready"
        android:textSize="100sp"/>

    <TextView
        android:id="@id/fragment_current_session_timer_inspecting_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingBottom="110dp"
        android:paddingEnd="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingStart="7dp"
        android:paddingTop="5dp"
        android:text="@string/inspection"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:id="@id/fragment_current_session_timer_stats_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_current_session_timer_bottom_hlistview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/bg_color"
        android:paddingBottom="5dp"
        android:paddingEnd="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingStart="7dp"
        android:paddingTop="5dp"
        android:textSize="16sp"/>


    <TextView
        android:id="@id/fragment_current_session_timer_stats_solves_number_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_current_session_timer_bottom_hlistview"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/bg_color"
        android:paddingBottom="5dp"
        android:paddingEnd="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"
        android:paddingStart="5dp"
        android:text="@string/solves"
        android:textSize="16sp"/>


    <it.sephiroth.android.library.widget.HListView
        android:id="@id/fragment_current_session_timer_bottom_hlistview"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray"
        android:listSelector="@drawable/background_button_bar"
        android:overScrollMode="always"/>


    <TextView
        android:id="@id/fragment_current_session_timer_scramble_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:text="@string/scrambling"
        android:textSize="18sp"/>


    <ImageView
        android:id="@id/fragment_current_session_timer_scramble_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:contentDescription="@string/scrambleimage"
        android:visibility="gone"/>


</RelativeLayout>