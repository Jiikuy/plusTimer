<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity">

    <TextView
        android:id="@id/fragment_current_s_timer_time_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/ready"
        android:textSize="50sp" />

    <TextView
        android:id="@id/fragment_current_s_timer_scramble_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffe0e0e0"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:text="@string/scrambling"
        android:textSize="18sp" />


    <TextView
        android:id="@id/fragment_current_s_timer_quickstats_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_current_s_timer_bottom_linearlayout"
        android:background="#ffe0e0e0"
        android:paddingBottom="5dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:textSize="16sp" />


    <TextView
        android:id="@id/fragment_current_s_timer_quickstats_solves_number_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_current_s_timer_bottom_linearlayout"
        android:layout_alignParentRight="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"
        android:text="@string/solves"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@id/fragment_current_s_timer_bottom_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <it.sephiroth.android.library.widget.HListView
            android:id="@id/fragment_current_s_timer_bottom_hlistview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffb0b0b0"
            android:overScrollMode="always"
            app:hlv_transcriptMode="normal" />
        <!--
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#ffc9c9c9"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="@string/submit"
                    android:textSize="17sp" />
        -->

    </LinearLayout>

    <ImageView
        android:id="@id/fragment_current_s_timer_scramble_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:contentDescription="@string/scrambleimage"
        android:visibility="gone" />


</RelativeLayout>