<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/activity_base_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.HistorySessionListActivity">
    <!-- The main content view -->

    <LinearLayout
        android:id="@id/activity_base_content_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimary"
            android:elevation="4dp">

            <include layout="@layout/toolbar_actionbar" />
        </FrameLayout>

        <FrameLayout
            android:id="@id/activity_history_sessionlist_main_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!-- The navigation drawer (width is placeholder, dynamically adjusted to total width-56dp)-->

    <ScrollView
        android:id="@id/activity_base_drawer_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?colorPrimaryDark"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@id/activity_base_drawer_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" />
    </ScrollView>

</android.support.v4.widget.DrawerLayout>