<!--suppress AndroidDomInspection -->
<resources>

    <style name="Theme.PlusTimer" parent="Base.Theme.PlusTimer">
        <item name="android:windowContentOverlay">@null</item>
        <item name="toolbarShadow">@drawable/shadow</item>
    </style>

    <style name="Theme.PlusTimer.Dark" parent="Base.Theme.PlusTimer.Dark">
        <item name="android:windowContentOverlay">@null</item>
        <item name="toolbarShadow">@drawable/shadow</item>
    </style>

    <style name="Theme.PlusTimer.Black" parent="Base.Theme.PlusTimer.Black">
        <item name="android:windowContentOverlay">@null</item>
        <item name="toolbarShadow">@drawable/shadow</item>
    </style>

    <style name="Theme.PlusTimer.WithNavDrawer" parent="Theme.PlusTimer" />

    <style name="Theme.PlusTimer.Dark.WithNavDrawer" parent="Theme.PlusTimer.Dark" />

    <style name="Theme.PlusTimer.Black.WithNavDrawer" parent="Theme.PlusTimer.Black" />

    <style name="Base.Theme.PlusTimer" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">?android:textColorPrimary</item>

        <item name="android:windowBackground">@color/background_material_light</item>

        <item name="actionModeBackground">?colorPrimary</item>

        <item name="android:buttonBarButtonStyle">@style/ButtonBarButtonStyle
        </item>

        <item name="windowActionModeOverlay">true</item>

        <item name="listDividerColor">@color/list_divider_light</item>
        <item name="activatedBackground">@drawable/activated_background_light</item>
        <item name="hintColor">@color/hint_light</item>
    </style>

    <style name="Base.Theme.PlusTimer.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">?android:textColorPrimary</item>

        <item name="android:windowBackground">@color/background_material_dark</item>

        <item name="actionModeBackground">?colorPrimary</item>

        <item name="android:buttonBarButtonStyle">@style/ButtonBarButtonStyle
        </item>

        <item name="windowActionModeOverlay">true</item>

        <item name="listDividerColor">@color/list_divider_dark</item>
        <item name="activatedBackground">@drawable/activated_background_dark</item>
        <item name="hintColor">@color/hint_dark</item>
    </style>

    <style name="Base.Theme.PlusTimer.Black" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">?android:textColorPrimary</item>

        <item name="android:windowBackground">@android:color/black</item>

        <item name="actionModeBackground">?colorPrimary</item>

        <item name="android:buttonBarButtonStyle">@style/ButtonBarButtonStyle
        </item>

        <item name="windowActionModeOverlay">true</item>

        <item name="listDividerColor">@color/list_divider_dark</item>
        <item name="activatedBackground">@drawable/activated_background_dark</item>
        <item name="hintColor">@color/hint_dark</item>
    </style>

    <style name="ButtonBarButtonStyle">
        <item name="android:minWidth">64dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textStyle">@integer/font_textStyle_medium</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EdgeEffectThemeOverlayDark" parent="ThemeOverlay.AppCompat.Dark" />

</resources>
