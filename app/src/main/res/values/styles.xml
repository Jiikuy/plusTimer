<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="hlv_listViewStyle">@style/HListView</item>
    </style>


    <style name="HListView">
        <item name="android:listSelector">@android:drawable/list_selector_background</item>
        <item name="hlv_stackFromRight">false</item>
        <item name="hlv_measureWithChild">0</item>
        <item name="hlv_dividerWidth">0dip</item>
        <item name="hlv_headerDividersEnabled">false</item>
        <item name="hlv_footerDividersEnabled">false</item>
        <item name="hlv_transcriptMode">alwaysScroll</item>
    </style>

    <style name="ACRADialogTheme" parent="@android:style/Theme.Dialog"/>

</resources>
