<!--suppress AndroidDomInspection -->
<resources>

    <style name="Theme.PlusTimer" parent="Theme.PlusTimer.Base">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.PlusTimer.Dark" parent="Theme.PlusTimer.Dark.Base">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.PlusTimer.WithNavDrawer" parent="Theme.PlusTimer" />

    <style name="Theme.PlusTimer.Dark.WithNavDrawer" parent="Theme.PlusTimer.Dark" />

    <style name="Theme.PlusTimer.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">?android:textColorPrimary</item>

        <item name="android:windowBackground">@color/background_material_light</item>

        <item name="actionModeBackground">?colorPrimary</item>

        <item name="android:buttonBarButtonStyle">@style/ButtonBarButtonStyle
        </item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.PlusTimer.Dark.Base" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">?android:textColorPrimary</item>

        <item name="android:windowBackground">@color/background_material_dark</item>

        <item name="actionModeBackground">?colorPrimary</item>

        <item name="android:buttonBarButtonStyle">@style/ButtonBarButtonStyle
        </item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ButtonBarButtonStyle">
        <item name="android:minWidth">64dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textStyle">@integer/font_textStyle_medium</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EdgeEffectThemeOverlayDark" parent="ThemeOverlay.AppCompat.Dark" />

</resources>
